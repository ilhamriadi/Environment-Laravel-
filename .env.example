# Docker Compose Environment Variables
# Copy this file to .env and adjust the values

# Application Settings
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8031

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_db
DB_USERNAME=laravel
DB_PASSWORD=secret

# MySQL Root Password
MYSQL_ROOT_PASSWORD=root

# GitHub Deployment (Optional)
# Uncomment and configure these if you want to deploy from GitHub
# GITHUB_REPO=username/repository-name
# GITHUB_BRANCH=main
# GITHUB_TOKEN=your-github-personal-access-token

# User/Group IDs for file permissions
USER_ID=1000
GROUP_ID=1000

# Ports
APP_PORT=8031
MYSQL_PORT=3307
PHPMYADMIN_PORT=8032
